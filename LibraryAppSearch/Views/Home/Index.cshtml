@if (Model.Aggregations != null)
{
    <h3>Aggregations</h3>

    @if (Model.Aggregations.ContainsKey("categories"))
    {
        <h4>Categories (Terms)</h4>
        <ul>
        @foreach (var bucket in Model.Aggregations.Terms("categories").Buckets)
        {
            <li>@bucket.Key: @bucket.DocCount</li>
        }
        </ul>
    }
}

